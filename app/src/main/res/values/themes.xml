<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DeliveryWeatherInsightTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorSecondary">@color/peach</item>
        <item name="colorSurface">@color/white_orange</item>
        <item name="colorSurfaceContainer">@color/peach_light</item>
        <item name="colorSurfaceInverse">@color/dark_orange</item>
        <item name="colorOnSurfaceInverse">@color/peach_white</item>
        <item name="colorSurfaceContainerHigh">@color/orange_light_darker</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>


    </style>

    <style name="Theme.DeliveryWeatherInsightTest" parent="Base.Theme.DeliveryWeatherInsightTest" />
    <style name="SpecialTextFont">
        <item name="fontFamily">@font/arimo</item>
    </style>
    <style name="BottomSheetStyle" parent="SpecialTextFont">
        <item name="android:textColor">?colorOnSurfaceInverse</item>
        <item name="android:background">@android:color/transparent</item>

    </style>
    <style name="TextAppearanceNavBarInActive" parent="Header">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearanceNavBarActive" parent="Header">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>
    <style name="Header" parent="SpecialTextFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
</resources>